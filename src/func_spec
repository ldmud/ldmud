        break
        switch
        local
        catch
"++"    inc
"--"    dec
"x++"   post_inc
"x--"   post_dec
"++x"   pre_inc
"--x"   pre_dec
"&&"    land
"||"    lor
"="     assign
"(void)="  void_assign
"+"     add       binary
"-"     subtract  binary
"*"     multiply  binary
"/"     divide    binary
"%"     mod       binary
">"     gt        binary
">="    ge        binary
"<"     lt        binary
"<="    le        binary
"=="    eq        binary
"!="    ne        binary
        in        binary
"~"     compl     unary
"&"     and       binary
"|"     or        binary
"^"     xor       binary
"<<"    lsh       binary
">>"    rsh       binary
">>>"   rshl      binary
"!"     not       unary
"["     index     binary
"[<"    rindex    binary
"[>"    aindex    binary
"[,]"   map_index  ternary
"[,<]"  map_rindex ternary
"[,>]"  map_aindex ternary
"."     s_index    binary
"->"    sx_index   binary
"[..]"     range     ternary
"[..<]"    nr_range  ternary
